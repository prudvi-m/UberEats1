@model List<Driver>
@{
    ViewData["Title"] = "Driver Manager";
}

<h1>@ViewBag.Title</h1>
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Update"
                           asp-route-id="@category.DriverID">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete"
                           asp-route-id="@category.DriverID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" class="btn btn-primary">Add New Driver</a>
</div>