@* this view is used for the Add action and the Update action *@
@model Partner

<div class="d-flex">
    <h2 class="my-2">Already a Partner?</h2> 
    
    <a class="btn-sm m-2 btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
    
    @* <button class="btn btn-sm m-2 btn btn-primary">Login</button> *@
</div>

<hr/>
<h1 class="my-1">Add Partner</h1>
<form asp-action="add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
 

    <div class="mb-3">
        <label asp-for="BusinessName" class="form-label"></label>
        <input asp-for="BusinessName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="BusinessAddress" class="form-label"></label>
        <input asp-for="BusinessAddress" class="form-control">
    </div> 

    <div class="mb-3">
        <label asp-for="BusinessEmail" class="form-label"></label>
        <input asp-for="BusinessEmail" class="form-control">
    </div>

   
     <div class="mb-3">
        <label asp-for="BusinessPhone" class="form-label">BusinessPhone</label>
        <input asp-for="BusinessPhone" class="form-control">
    </div>
       <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">Business Type</label>
        <select asp-for="CategoryID"
                asp-items="@(new SelectList(ViewBag.Categories,
                         "CategoryID","Name"))"
                class="form-select"></select>
    </div>  

  
    <input type="hidden" asp-for="PartnerID" />

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>